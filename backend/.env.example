# Postgres connection (either set individual vars or DATABASE_URL)
PGHOST=localhost
PGUSER=your_db_user
PGPASSWORD=your_db_password
PGDATABASE=your_db_name
PGPORT=5432

# Optional: full connection string (overrides individual PG* vars if set)
# DATABASE_URL=postgres://user:password@localhost:5432/dbname

# Redis connection (optional, for caching)
REDIS_URL=redis://localhost:6379

# Pool / timeout tuning (optional)
PG_MAX=10
PG_IDLE_MS=30000

# Application env
NODE_ENV=development
